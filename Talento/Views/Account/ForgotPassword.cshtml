@model Talento.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
    ViewBag.BodyClass = "login-home";
    //Layout = "~/Views/Account/Shared/_LayoutLogin.cshtml";
}
@Html.Partial("_Background")

<div class="col-md-4 center-block login-card"  style="float: none; background-color: white; margin-top: 2%;">
    @using (Html.BeginForm("SendmeanEmail", "Account", FormMethod.Post, new { ReturnUrl = "", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="pmd-card-title card-header-border text-center">
            <div class="loginlogo">
                
            </div>
            <br />
            <div class="login-title center-block">Password recovery in <strong>TALENTO<small> Beta</small></strong></div>
            <div class="login-bottom"></div>


            @if (!Html.ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary("", new { @class = "alert alert-info", @role = "alert" })
            }

            <div class="col-md-10 form-group pmd-textfield pmd-textfield-floating-label pull-left">
                @Html.LabelFor(m => m.Email, new { @class = "control-label pmd-input-group-label pull-left" })
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons md-dark pmd-sm">mail_outline</i>
                    </div>
                    <input class="form-control" id="Email" type="text" name="Email">
                </div>
            </div>
        </div>
        <div class="pmd-card-footer card-footer-no-border card-footer-p16 text-center">
            <div class="form-group clearfix">
                <span class="pull-right">
                    Already a User? @Html.ActionLink("Login", "Login")
                </span>
            </div>
            <div class="form-group clearfix">
                <input type="submit" value="Send me an Email" class="btn pmd-ripple-effect btn-primary btn-block">
                <p>
                    <br />
                    Don't have an account?
                    @Html.ActionLink("Sign Up", "Register").
                </p>
            </div>
        </div>
    }
</div>


