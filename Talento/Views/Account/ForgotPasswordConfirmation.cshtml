@model Talento.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "ForgotPasswordConfirmation";
    ViewBag.BodyClass = "login-home";
    //Layout = "~/Views/Account/Shared/_LayoutLogin.cshtml";
}

@Html.Partial("_Background")

<div class="col-md-4 center-block login-card" style="float: none; background-color: white; margin-top: 8%;">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl, @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="pmd-card-title card-header-border text-center">
            <div class="loginlogo">
                <a href="javascript:void(0);">
                    <img src="https://upload.wikimedia.org/wikipedia/en/b/b1/Tata_Consultancy_Services_Logo.svg" alt="Logo TCS">
                </a>
            </div>
            <h2>Reset Password <strong>TALENTO</strong></h2>
        </div>

        <div class="pmd-card-body">

            @if (!Html.ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary("", new { @class = "alert alert-danger", @role = "alert" })
            }

            <div class="form-group pmd-textfield pmd-textfield-floating-label">
                @Html.LabelFor(m => m.Password, new { @class = "control-label pmd-input-group-label" })
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons md-dark pmd-sm">lock_outline</i>
                    </div>
                    <input class="form-control" id="Password" name="Password" type="password">
                </div>
            </div>
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label pmd-input-group-label" })
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons md-dark pmd-sm">lock_outline</i>
                    </div>
                    <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" type="password">
                </div>
            </div>
            <input class="form-control" value="@ViewData["mail"]" id="Email" name="Email" type="hidden">
            <input class="form-control" value="@ViewData["code"]" id="Code" name="Code" type="hidden">
            <input type="submit" value="Reset Pasword" class="btn pmd-ripple-effect btn-primary btn-block">
        </div>
    }
</div>







