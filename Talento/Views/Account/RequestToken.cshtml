@model Talento.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    ViewBag.BodyClass = "login-home";
    //Layout = "~/Views/Account/Shared/_LayoutLogin.cshtml";
}

@Html.Partial("~/Views/Account/Shared/_BackgroundVideo.cshtml")

<div class="col-md-4 center-block login-card" style="float: none; background-color: white; margin-top: 2%;">
    @using (Html.BeginForm("RequestToken", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl, @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="pmd-card-title card-header-border text-center">
            <div class="loginlogo">

            </div>
            <br />
            <div class="login-title center-block">Request token</div>
            <div class="login-bottom"></div>
        </div>

        <div class="pmd-card-body">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary("", new { @class = "alert alert-info", @role = "alert" })
            }
            <div class="form-group pmd-textfield pmd-textfield-floating-label">
                @Html.LabelFor(m => m.Email, new { @class = "control-label pmd-input-group-label" })
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="material-icons md-dark pmd-sm">mail_outline</i>
                    </div>
                    <input class="form-control" id="Email" type="text" name="Email">
                </div>
            </div>
        </div>

        <div class="pmd-card-footer card-footer-no-border card-footer-p16 text-center">
            <input type="submit" value="Send Token" class="btn pmd-ripple-effect btn-primary btn-block">
            <p>
                <br />
                Don't have an account?
                @Html.ActionLink("Sign Up", "Register").
            </p>
        </div>
    }
</div>
